{
  "name": "reelflix",
  "version": "1.0.0",
  "description": "在线影视平台",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"pnpm run dev:client\" \"pnpm run dev:server\"",
    "dev:client": "cd client && pnpm run dev",
    "dev:server": "cd server && pnpm run dev",
    "build": "concurrently \"pnpm run build:client\" \"pnpm run build:server\"",
    "build:client": "cd client && pnpm run build",
    "build:server": "cd server && pnpm run build",
    "start": "concurrently \"pnpm run start:client\" \"pnpm run start:server\"",
    "start:client": "cd client && pnpm run preview",
    "start:server": "cd server && pnpm start"
  },
  "keywords": [
    "react",
    "express",
    "movie",
    "streaming"
  ],
  "author": "ReelFlix Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}